@{
    ViewData["Title"] = "Staff Data";
}

<div class="text-center" id="object">
    <h1 class="display-4">Staff Data</h1>
    <p>View and edit staff data</p>
    @Html.DropDownList("Options", null, new { onchange = "document.location='/Staff/Index?value='+ this.value;" })

    @if (ViewBag.Value == 1)
    {

        <a class="nav-link text-dark" asp-area="" asp-controller="Staff" asp-action="TeacherCreate">
            <input type="button" class="btn btn-primary" value="Create" />
        </a>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Expertise</th>
                <th>Age</th>
                <th>Date of Hire</th>
            </tr>
            @foreach (var teacher in ViewBag.Teachers)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.fname</td>
                    <td>@teacher.lname</td>
                    <td>
                        @teacher.expertise
                    </td>
                    <td>@teacher.age</td>
                    <td>@teacher.dateOfHire</td>
                    <td>
                        @Html.ActionLink("Update", "SelectTeacher", new { id = teacher.TeacherId }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteTeacher", new { id = teacher.TeacherId }, null)
                    </td>
                </tr>
            }
        </table>

    }
    else if (ViewBag.Value == 2)
    {


        <a class="nav-link text-dark" asp-area="" asp-controller="Staff" asp-action="StaffCreate">
            <input type="button" class="btn btn-primary" value="Create" />
        </a>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Date of Hire</th>
                <th>Job Title</th>
            </tr>
            @foreach (var staff in ViewBag.Staff)
            {
                <tr>
                    <td>@staff.StaffId</td>
                    <td>@staff.fname</td>
                    <td>@staff.lname</td>
                    <td>@staff.age</td>
                    <td>@staff.dateOfHire</td>
                    <td>
                        @staff.jobTitle
                    </td>
                    <td>
                        @Html.ActionLink("Update", "SelectStaff", new { id = staff.StaffId }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteStaff", new { id = staff.StaffId }, null)
                    </td>
                </tr>
            }
        </table>

    }
</div>

