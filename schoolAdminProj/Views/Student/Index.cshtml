@{
    ViewData["Title"] = "Student Data";
}

<div class="text-center" id="object">
    <h1 class="display-4">Student Data</h1>
    <p>View and edit student data</p>
    @Html.DropDownList("Options", null, new { onchange = "document.location='/Student/Index?value='+ this.value;" })

    @if (ViewBag.Value == 1)
    {
        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="StudentCreate">
            <input type="button" class="btn btn-primary" value="Create" />
        </a>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOE</th>
                <th>Age</th>
                <th>Grade</th>
                <th>GPA</th>
            </tr>
            @foreach (var student in ViewBag.Students)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.fname</td>
                    <td>@student.lname</td>
                    <td>
                        @student.dateOfEnrollment
                    </td>
                    <td>@student.age</td>
                    <td>@student.grade</td>
                    <td>@student.GPA</td>
                    <td>
                        @Html.ActionLink("Update", "SelectStudent", new { id = student.StudentId }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteStudent", new { id = student.StudentId }, null)
                    </td>
                </tr>
            }

